{
    "manifest_version": 2,
    "name": "beautify",
    "description": "i wanan be beautiful",
    "version": "2.0",
    "permissions": [
        "contextMenus",
        "activeTab"
    ],
    "icons": {
        "128": "icon.png",
        "64": "icon64.png",
        "32": "icon32.png",
        "16": "icon16.png"
    },
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "browser_action": {
        "default_icon": "icon32.png"
      },
    "content_scripts": [{
            "matches": [
                "https://*/*", "http://*/*"
            ],
            "js": [
                "jquery.min.js", "content.js"
            ]
        }

    ]
}